{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true, // type files allowed
    "esModuleInterop": true,
    "jsx" : "react",
    "lib" : ["es5","es2015","es2016","dom","ESNext"],
    "types" : ["node"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir" : "dist/esm",
    "sourceMap": true,
    "strict" : true, // hardest possible linting
    "target" : "es6"
  },
  "include" : ["src/**/*.ts","src/**/*.tsx"] 
}